@page
@model RazorSimple.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Customer Management";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-5"><i class="fas fa-users text-primary"></i> Customer Management</h1>
        <p class="lead">Manage customer information and waiver status</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-page="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Customer
        </a>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <form method="get" class="d-flex gap-2">
            <input type="text" name="searchTerm" value="@Model.SearchTerm" 
                   class="form-control" placeholder="Search customers..." />
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>
    <div class="col-md-6">
        <div class="d-flex gap-2 justify-content-end">
            <a asp-page="Index" asp-route-filter="waiver" 
               class="btn @(Model.Filter == "waiver" ? "btn-success" : "btn-outline-success")">
                <i class="fas fa-check-circle"></i> With Waiver (@Model.CustomersWithWaiver)
            </a>
            <a asp-page="Index" asp-route-filter="no-waiver" 
               class="btn @(Model.Filter == "no-waiver" ? "btn-warning" : "btn-outline-warning")">
                <i class="fas fa-exclamation-triangle"></i> No Waiver (@Model.CustomersWithoutWaiver)
            </a>
            <a asp-page="Index" class="btn @(string.IsNullOrEmpty(Model.Filter) ? "btn-primary" : "btn-outline-primary")">
                <i class="fas fa-list"></i> All
            </a>
        </div>
    </div>
</div>

@if (!Model.Customers.Any())
{
    <div class="alert alert-info">
        <h4><i class="fas fa-info-circle"></i> No customers found</h4>
        <p>@(string.IsNullOrEmpty(Model.SearchTerm) ? "No customers match your filter criteria." : $"No customers found matching '{Model.SearchTerm}'.")</p>
        @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.Filter))
        {
            <a asp-page="Index" class="btn btn-primary">
                <i class="fas fa-eye"></i> View All Customers
            </a>
        }
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-table"></i> Customers 
                <span class="badge bg-secondary">@Model.Customers.Count</span>
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Location</th>
                            <th>Experience</th>
                            <th>Waiver Status</th>
                            <th>Registered</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.Customers)
                        {
                            <tr>
                                <td>
                                    <strong>@customer.FullName</strong>
                                    <br />
                                    <small class="text-muted">Age: @customer.Age</small>
                                </td>
                                <td>
                                    <a href="mailto:@customer.Email" class="text-decoration-none">
                                        <i class="fas fa-envelope"></i> @customer.Email
                                    </a>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(customer.PhoneNumber))
                                    {
                                        <a href="tel:@customer.PhoneNumber" class="text-decoration-none">
                                            <i class="fas fa-phone"></i> @customer.PhoneNumber
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <i class="fas fa-map-marker-alt"></i>
                                    @customer.City@(!string.IsNullOrEmpty(customer.Country) ? $", {customer.Country}" : "")
                                </td>
                                <td>
                                    <span class="badge bg-@(customer.BikingExperience switch 
                                    {
                                        ExperienceLevel.Beginner => "success",
                                        ExperienceLevel.Recreational => "info",
                                        ExperienceLevel.Intermediate => "warning",
                                        ExperienceLevel.Advanced => "danger",
                                        ExperienceLevel.Professional => "dark",
                                        _ => "secondary"
                                    })">
                                        @customer.BikingExperience
                                    </span>
                                </td>
                                <td>
                                    @if (customer.HasSignedWaiver)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle"></i> Signed
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-exclamation-triangle"></i> Pending
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @customer.RegisteredAt.ToString("MMM dd, yyyy")
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="Details" asp-route-id="@customer.Id" 
                                           class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-page="Edit" asp-route-id="@customer.Id" 
                                           class="btn btn-sm btn-outline-secondary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (!customer.HasSignedWaiver)
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-success" 
                                                    title="Mark Waiver as Signed"
                                                    onclick="markWaiverSigned(@customer.Id, '@customer.FullName')">
                                                <i class="fas fa-file-signature"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
<script>
    function markWaiverSigned(customerId, customerName) {
        if (confirm(`Mark waiver as signed for ${customerName}?`)) {
            fetch(`/Customers/MarkWaiverSigned?id=${customerId}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Error updating waiver status');
                }
            })
            .catch(error => {
                alert('Error updating waiver status');
            });
        }
    }
</script>
}